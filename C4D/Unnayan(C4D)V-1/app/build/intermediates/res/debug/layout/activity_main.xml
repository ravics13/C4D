<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.unnayan.MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Please Provide the relevent Information"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Cooper"
            android:text="Sub-Division"
            android:textStyle="normal"
            android:textColor="#00ffce"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/subdiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_height="wrap_content"
            android:fontFamily="Cooper"
            android:text="P.S/Block"
            android:layout_marginTop="11dp"
            android:textColor="#00ffce"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/ps_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="40dp"

            android:textSize="20sp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="Cooper"
            android:layout_marginBottom="11dp"
            android:text="Village"
            android:textColor="#00ffce"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/village"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="62dp"
            android:textSize="20sp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
         <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:fontFamily="Cooper"
            android:text="Sub-Village"
            android:layout_marginTop="11dp"
            android:textColor="#00ffce"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/svillage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:ems="10" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
         <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Cooper"
            android:layout_marginBottom="11dp"
            android:text="Language"
            android:layout_marginTop="11dp"
            android:textColor="#00ffce"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/lang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:textSize="20sp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:ems="10" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

         <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:fontFamily="Cooper"
            android:text="Group"
            android:textColor="#00ffce"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="60dp"
            android:textSize="20sp"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:ems="10" />

    </LinearLayout>

    <Button
        android:id="@+id/proceed"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:text="Next" />

